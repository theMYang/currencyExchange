<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Configuration 3.0//EN" "mybatis-3-mapper.dtd" >

<mapper namespace="com.wbo.currencyExchange.dao.UserDao.UserInfoDao">
	
	<insert id="insertUserInfo">
	     <selectKey  keyColumn="user_id" resultType="java.lang.Integer" keyProperty="userId" order="AFTER"> 
	       select last_insert_id()
	     </selectKey>
	     insert into user_inf (user_login_id, login_name, mobile_phone) values (#{userLoginId}, #{loginName}, #{mobilePhone})
	</insert>

</mapper>